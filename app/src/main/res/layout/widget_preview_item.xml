<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="4dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/darker_gray"
        android:orientation="vertical">

        <com.nicaiya.diywidget.view.PreviewWidgetView
            android:id="@+id/widget_preview"
            android:layout_width="300dp"
            android:layout_height="200dp"
            tools:background="@android:color/white" />

        <TextView
            android:id="@+id/widget_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="2dp"
            android:textColor="@android:color/white"
            tools:text="Name" />

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/widget_preview_op"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/add"
                style="@style/WidgetPreviewOpText"
                android:text="@string/widget_preview_op_add"
                tools:text="Add" />

            <TextView
                android:id="@+id/edit"
                style="@style/WidgetPreviewOpText"
                android:text="@string/widget_preview_op_edit"
                tools:text="Edit" />

            <TextView
                android:id="@+id/delete"
                style="@style/WidgetPreviewOpText"
                android:text="@string/widget_preview_op_delete"
                tools:text="Delete" />

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>

